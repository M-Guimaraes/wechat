  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Program",
      "runtimeExecutable": "${workspaceFolder}/node_modules/nodemon/bin/nodemon.js",
      "restart": true,
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/server.js",
      "env": {
        "PORT": "3005",
        "HOST": "0.0.0.0",
        "NODE_ENV": "development"
      },
      "autoAttachChildProcesses": true
    }
  ]
}